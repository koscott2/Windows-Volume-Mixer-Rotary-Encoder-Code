
 #define inputCLK 4
 #define inputDT 5
 #define inputSW 3
 
 #define inputCLK2 7
 #define inputDT2 8
 #define inputSW2 6

 #define inputCLK3 10
 #define inputDT3 11
 #define inputSW3 9


 
 int counter = 0; 
 int currentStateCLK;
 int previousStateCLK;
 int buttonState = 0;
 int send1 = 0;
 String write1 = "";
 bool mute1 = false;

  int counter2 = 0; 
 int currentStateCLK2;
 int previousStateCLK2;
 int buttonState2 = 0;
 int send2 = 0;
 String write2 = "";

 
  int counter3 = 0; 
 int currentStateCLK3;
 int previousStateCLK3;
 int buttonState3 = 0;
 int send3 = 0;
 String write3 = "";


 String total = "";
 const int change = 25;
 
 
 void setup() { 
   pinMode (inputCLK,INPUT);
   pinMode (inputDT,INPUT);
   pinMode (inputSW,INPUT);
   Serial.begin (115200);   
   previousStateCLK = digitalRead(inputCLK);
 
 } 
 
 void loop() {
  encoder1();
  encoder2();
  encoder3();
 Serial.println(total);
 }


 void encoder1(){
  buttonState = digitalRead(inputSW);
  if(buttonState == HIGH){
   currentStateCLK = digitalRead(inputCLK);
   if (currentStateCLK != previousStateCLK){ 
     if (digitalRead(inputDT) != currentStateCLK) { 
       counter = counter + change;     
     } else {
       counter = counter - change;
     }
     if (counter>1000){
      counter = 1000;
     }
     if (counter2<0){
      counter = 0;
     }
     send1 = counter;
   } 
   
   previousStateCLK = currentStateCLK; 
  }
  else{
    if(send1 !=0){
    send1 = 0;
    delay(250);
    }
    else{
      send1 = counter;
      delay(250);
    }

  }
   total =String(send1);
 }


void encoder2(){
    buttonState2 = digitalRead(inputSW2);
  if(buttonState2 == HIGH){
   currentStateCLK2 = digitalRead(inputCLK2);
   if (currentStateCLK2 != previousStateCLK2){ 
     if (digitalRead(inputDT2) != currentStateCLK2) { 
       counter2 = counter2 + change;     
     } else {
       counter2 = counter2 - change;
     }
     if (counter2>1025){
      counter2 = 1025;
     }
     if (counter2<0){
      counter2 = 0;
     }
     send2 = counter2;
   } 
   previousStateCLK2 = currentStateCLK2;
  }   else{
    if(send2 !=0){
    send2 = 0;
    delay(250);
    }
    else{
      send2 = counter;
      delay(250);
    }

    
 }
 total = total + "|" + String(send2);
}

 void encoder3(){
    buttonState3 = digitalRead(inputSW3);
  if(buttonState3 == HIGH){
   currentStateCLK3 = digitalRead(inputCLK3);
   if (currentStateCLK3 != previousStateCLK3){ 
     if (digitalRead(inputDT3) != currentStateCLK3) { 
       counter3 = counter3 + change;     
     } else {
       counter3 = counter3 - change;
     }
     if (counter3>1025){
      counter3 = 1025;
     }
     if (counter3<0){
      counter3 = 0;
     }
     send3 = counter3;
   } 
   previousStateCLK3 = currentStateCLK3;
  }   else{
    if(send3 !=0){
    send3 = 0;
    delay(250);
    }
    else{
      send3 = counter;
      delay(250);
    }

    
  } total = total + "|" + String(send3);}
